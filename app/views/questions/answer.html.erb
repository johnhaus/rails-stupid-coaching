<div class="flex-container">
  <div class="row top-padding">
    <div class="conversation margin border border-left flex-standard">
      <p><%= @ask %></p>
      <p>--You</p>
    </div>
    <div class="conversation margin response border border-left flex-standard">
      <p><%= @answer %></p>
      <p>--Your coach</p>
    </div>

    <div>
      <form action="/ask" method="get">
        <p>
        <input type="submit" value="Say something else!" class="button button-pad-small margin">
        </p>
      </form>
    </div>
  </div>
</div>
